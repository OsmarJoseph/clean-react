{
  "compilerOptions": {
    "target": "es6",
    "lib":[
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "strict": false,
    "resolveJsonModule": true,
    "rootDirs": ["src", "__tests__"],
    "baseUrl": "src",
    "paths": {
      "@/__tests__/*": ["../__tests__/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src", "__tests__"],
}